<div class="pull-right">
	<% if !session[:spotify_token] %>
		<a href="https://accounts.spotify.com/authorize?client_id=<%= ENV["spotify_client_id"] %>&response_type=code&redirect_uri=http://localhost:3000/auth&scope=user-library-read user-library-modify" class="btn btn-info">Login to Spotify</a>
	<% end %>
	
	<% if session[:spotify_token] %>
		<a href="/my-tracks" class="btn btn-warning">View Saved Tracks</a>
	<% end %>

	<% if session[:spotify_token] %>
		<a href="/logout" class="btn btn-danger">Logout</a>
	<% end %>
</div>

<div class="clearfix"></div>
<!--Search Form-->
<div class="row margin-top-20">
	<form action="/tracks" method="get">
		<div class="col-sm-10">
			<input type="text" name="search" class="form-control" placeholder="Search for Songs!" />
		</div>
		<div class="col-sm-2">
			<button type="submit" class="btn btn-primary btn-block">Search Songs</button>
		</div>
	</form>
</div>
<!--/Search Form-->